Hi,
My final script (thanx)

dirbackup="c:/backup/mysqlnext/"
cd "$dirbackup"
eval origdat=$(date.exe '+%d%b%y')

if ! mkdir "$dat"; then
     i=1
     finished=""
     while [ -z "$finished" ] && [ "$i" <= 9 ]; do
       i=$[i+1]
       dat="${origdat}v$i"
       if mkdir "$dat"; then
           finished="end"
           echo "created $dat"
       fi
     done
fi
cd $dat

zzapper (vim & zsh)
