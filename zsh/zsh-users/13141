 	    if (s[0] == Star && !s[1]) {
 		if (!checkrmall(pwd))
-		    uremnode(args, node);
+		    return;
 	    } else if (l > 2 && s[l - 2] == '/' && s[l - 1] == Star) {
 		char t = s[l - 2];

 		s[l - 2] = 0;
 		if (!checkrmall(s))
-		    uremnode(args, node);
+		    return;
 		s[l - 2] = t;
 	    }
