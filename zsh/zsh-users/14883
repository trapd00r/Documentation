er... sorry


# in .zshrc
zmodload -aF zsh/system b:zsystem

# in window A
touch /tmp/zsystem_filelock
(
   zsystem flock /tmp/zsystem_filelock
   print locked
   sleep 10
)

# in window B
zsystem flock /tmp/zsystem_filelock


