/usr/games/wtf
juhtolv@heresy : /home/juhtolv
% wtf preexec                                                     10003 | pts/5
preexec () {
        writeexectitle $*
        print -Pn "\e]0;${EXECTEXT}\a"
}
juhtolv@heresy : /home/juhtolv
% wtf writeexectitle                                              10004 | pts/5
writeexectitle () {
        export EXECTEXT="${ROOTTEXT}${ROOTTITLEADD}%n@%m:%d : $*"
}
juhtolv@heresy : /home/juhtolv
%                                                                 10005 | pts/5

