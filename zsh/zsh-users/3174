Hmm... I'll space them this time.

for i (*(/N)) {mv -v "$i" "${(L)i:gs/ /_/}"}

for i (*/**/*(/N)) {mv -v "${${(L)i%/*/}:gs/ /_/}/${${${i#*/}%/}##*/}" "${(L)i:gs/ /_/}"}

for i (**/*(N^/)) {mv -v "${i}" "${(L)i:gs/ /_/}"}

