> pathfind() {
>   local dir
>   for dir in $path; do
>     if [[ -f $dir/$2 ]]; then
>       $1 $dir/$2 "${(@)argv[3,-1]}"
>       return
>     fi
>   done
>   print pathfind: file not found in path: $2
>   return 255
> }
