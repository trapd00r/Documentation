  AC_CACHE_CHECK(if rlim_t is quad_t,
  zsh_cv_rlim_t_is_quad_t,
  [AC_TRY_RUN([
+ #ifdef HAVE_SYS_TIME_H
+ #include <sys/time.h>
+ #endif
  #include <sys/resource.h>
  main(){struct rlimit r;exit(sizeof(r.rlim_cur) <= sizeof(long));}],
  zsh_cv_rlim_t_is_quad_t=yes,

