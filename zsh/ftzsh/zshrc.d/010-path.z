path=(
    ${HOME}/bin
    /{,s}bin
    /usr/{,s}bin
    /usr/local/{,s}bin
)

for i in /opt/opera/bin /usr/games ; do
    [[ -d ${i} ]] && path=( $path ${i} )
done

fpath=(
    ~/.zfunctions
    ~/.zfunctions/**/*(/N)
    ${fpath}
)
