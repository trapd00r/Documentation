+case "$state" in
+  (addedmodules)
+    compset -P '*,'
+    _alternative \
+      'moddirs:module dirs:_files -/ -S ,' \
+      'modules:loc module dirs:_files -/ -W ${MODULE_LOC:-/usr/src/modules} -S ,'
