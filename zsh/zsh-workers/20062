============== revised source
==============================
#!/bin/zsh

TRAPINT() {
	echo Interrupted
	exit 2
}

TRAPZERR() {
	reason=$?
	echo Failed command.
	exit $reason
}

TRAPEXIT() {
	echo exited normally
}

sleep $1

# Try ^C here sometimes.

echo after sleep

set -e

cp

echo after command

