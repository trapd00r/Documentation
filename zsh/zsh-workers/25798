t/local/lib/gtk-2.0/include -I/opt/local/include/atk-1.0 -I/opt/local/inclu=
de/cairo -I/opt/local/include/pango-1.0 -I/opt/local/include/pixman-1 -I/op=
t/local/include/freetype2 -I/opt/local/include/libpng12 -I/usr/X11R6/includ=
e -I/opt/local/include/libgnomeui-2.0 -I/opt/local/include/libart-2.0 -I/op=
