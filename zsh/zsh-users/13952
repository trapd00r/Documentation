        while (tcsetattr(SHTTY, TCSADRAIN, &ti->tio) =3D=3D -1 && errno =3D=
=3D=20
EINTR)
            ;
# else
        ioctl(SHTTY, TCSETS, &ti->tio);
        while (ioctl(SHTTY, TCSETS, &ti->tio) =3D=3D -1 && errno =3D=3D EIN=
TR)
