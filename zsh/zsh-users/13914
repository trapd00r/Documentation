=3D 0
readlink("/proc/self/fd/0", "/dev/ttyS1"..., 4095) =3D 10
open("/dev/ttyS1", O_RDWR|O_NOCTTY)     =3D 3
fcntl(3, F_DUPFD, 10)                   =3D 10
close(3)                                =3D 0

