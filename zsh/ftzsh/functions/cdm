# change to a directory and set up a running tmux session accordingly.

emulate -L zsh
setopt extendedglob
local tmp

if [[ -z "${TMUX}" ]]; then
    printf 'Not inside of `tmux'\''. Giving up.\n'
    return 1
fi
if [[ -n "$1" ]]; then
    [[ "$1" == . ]] && tmp="${PWD}" || tmp="$1"
else
    tmp="${HOME}"
fi
cd "${tmp}"
tmp="${PWD}"
tmux "set-option" "default-path" "${tmp}"
[[ -n "${DISPLAY}" ]] && tmp=on || tmp=off
tmux "set-option" "set-titles" "${tmp}"
return 0
