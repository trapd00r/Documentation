+++ ./Src/hist.c	Sun Jun  6 21:18:59 1999
@@ -984,6 +984,8 @@
 void
 remhist(void)
 {
+    if (hist_ring == &curline)
+	return;
     if (!(histactive & HA_ACTIVE)) {
 	if (!(histactive & HA_JUNKED)) {
 	    freehistnode((HashNode)hist_ring);
