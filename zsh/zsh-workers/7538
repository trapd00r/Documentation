diff -u oc/Base/_arguments Completion/Base/_arguments
--- oc/Base/_arguments	Mon Aug 30 10:58:52 1999
+++ Completion/Base/_arguments	Mon Aug 30 11:29:55 1999
@@ -499,6 +499,7 @@
 	line=( "$line[@]" "$ws[1]" )
 	[[ -n "$inopt" ]] && nargbeg=$(( beg - 1 ))
 	inopt=''
+        [[ -z "$args[nth]" && "$rest" = \*::* ]] && break
 	(( nth++ ))
       fi
     fi

